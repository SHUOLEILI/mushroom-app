<div class="row">
  <div class="span6 offset3">
    <%= form_for(:consumers, url: consumers_path) do |f| %>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :username %><br>
        <%= f.text_field :username %>
      </div>
      <div class="field">
        <%= f.label :password1 %><br>
        <%= f.text_field :password %>
      </div>
        <div class="field">
          <%= f.label :password2 %><br>
          <%= f.text_field :password %>
        </div>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :gender %><br>
        <%= f.text_field :gender %>
      </div>
      <div class="field">
        <%= f.label :age %><br>
        <%= f.text_field :age %>
      </div>
      <div class="actions">
        <%= f.submit %>
        <%= link_to 'Back', :root %>
      </div>
    <% end %>
  </div>
</div>