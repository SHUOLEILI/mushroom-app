<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<style>
body {
    background-color: #b0c4de;
    text-shadow: 5px 5px 5px #FF0000;

}
</style>


<div class="row">
  <div class="span6 offset3">
    <%= form_for(:user_sessions, url: user_sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>Login as Facebook User? <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %> </p>
    <p>New user? <%= link_to 'Signup', new_consumer_path %></p>
  </div>
</div>



